{
	"name": "linkist",
	"publisher": "gladed",
	"displayName": "linkist",
	"icon": "img/icon_100.png",
	"description": "Create and follow permanent links in Markdown files",
	"version": "1.4.6",
	"repository": {
		"type": "git",
		"url": "https://github.com/gladed/linkist"
	},
	"engines": {
		"vscode": "^1.47.0"
	},
	"keywords": [
		"link",
		"hyperlink",
		"markdown",
		"navigation",
		"zettelkasten"
	],
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:linkist.link",
		"onLanguage:markdown"
	],
	"main": "./out/extension.js",
	"contributes": {
		"keybindings": [
			{
				"command": "linkist.link",
				"key": "ctrl+alt+l",
				"when": "editorTextFocus"
			}
		],
		"commands": [
			{
				"command": "linkist.link",
				"title": "Linkist: Link"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "links",
					"name": "Links",
					"when": "markdownLinksEnabled",
					"icon": "img/icon.svg",
					"contextualTitle": "Linkist Links"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.13.15",
		"@types/vscode": "^1.47.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"fs-extra": "^6.0.1",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.9.7",
		"vscode-test": "^1.3.0"
	}
}
